{
	"compilerOptions": {
		"target": "es6",
		"module": "commonJS",
		"outDir": "./bin",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		]
	},
	"include": [
		"./src/*.ts",
		"./types/*.ts"
	]
}